    jTextFieldGewicht.setSize(10,10);

   /* this.add( jLabel1EingabeText, new GridBagConstraints(0, 0, 1, 1, 0.0, 0.0
            ,GridBagConstraints.WEST, GridBagConstraints.NONE, new Insets(0, 0, 0, 0), 77, 19) );
*/

    jButton1.setText("Weiter");
